generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employees {
  id       String    @id @default(uuid())
  name     String
  phone    String
  value    Int       @default(0)
  services Service[]

  @@map("employees")
}

model Helpers {
  id       String    @id @default(uuid())
  name     String
  phone    String
  value    Int       @default(0)
  services Service[]

  @@map("helpers")
}

model Service {
  id              String          @id @default(uuid())
  client          String
  date            DateTime
  vehicle         String
  plate           String
  particular      Boolean
  enterprise      Boolean
  enterprise_name String?
  phone           String
  diagnoses       String
  employees       Employees?       @relation(fields: [employeesId], references: [id])
  employeesId     String?          @map("employees_id")
  helpers         Helpers?        @relation(fields: [helpersId], references: [id])
  helpersId       String?         @map("helpers_id")
  type_services   Type_services[]
  value           Int

  @@map("service")
}

model Type_services {
  id      String    @id @default(uuid())
  name    String
  value   Int       @default(0)
  service Service[]

  @@map("types_services")
}

model Admin {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}
